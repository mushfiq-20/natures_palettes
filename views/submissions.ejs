<!DOCTYPE html>
<html>
<head>
	<title>Nature's Palette: Modify</title>
	<meta charset="utf-8">

	<!-- Fonts -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Dancing+Script&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<!-- jQuery and jQuery UI -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
	<link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

	<!-- Bootstrap -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<!-- Slider -->
	<script src="/js/cycle2.js"></script>

	<!-- Custom Scripts -->
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<script src="/js/script.js"></script>

	<style type="text/css">
		#messages
		{
	    	margin-top: 60px;
		}
		#messages ul{
			padding: 0px;
		}
		.info  li{
			list-style-type: none;
			color:#337ab7;
			font-weight: bold;
		}
		.list li{
			margin-left: 15px;
			text-align: left;
    		list-style: initial;
		}
		.list li span{
			font-weight: bold;
		}
	</style>
</head>
<body>
	<div id="page-wrapper" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding">
		<div id="navigation-bar" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div id="logo" class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
				<h1><a href="/">Nature's Palette</a></h1>
			</div> <!-- /logo -->


			<div id="navigation-menu" class="col-lg-9 col-md-9 col-sm-9 col-xs-8">
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/upload">Upload</a></li>
					<li><a href="/search">Search</a></li>
					<li><a href="/modify">Modify</a></li>
				</ul>
			</div> <!-- /logo -->
		</div> <!-- /navigation-bar -->
		

        <div id="search-data" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding">
        	<% 
	            if(typeof messages!="undefined")
	            {
	        %>
	            <h2><%- messages() %></h2>
	        <% 
	            }
	        %>
			<div class="table" style="padding-bottom: 20px;">
				
				<h3 style="text-align: center; margin-bottom: 30px; margin-top: 0px;">My Submissions</h3>
				<div class="table-responsive">
					<table class="table table-striped table-bordered custab" >
					    <thead>
					        <tr>
					            <th>Submission Id</th>
					            <th>Submission Time</th>
					            <th>Metadata Filename</th>
					            <th>Rawdata Filename</th>
					            <th>Option</th>
					            <!-- <th class="text-center">Action</th> -->
					        </tr>
					    </thead>
			            
					    <% 
		                    var count=1;
		                    for(var i = subs.length - 1; i >=0; i--)
		                    {
		                    	count++;
		                %>
		                <tr>
			                <td><%= subs[i].id; %></td>
			                <td><%= subs[i].time; %></td>
			                <td><%= subs[i].metadata; %></td>
			                <td><%= subs[i].rawdata; %></td>
			                <td><a href="/modify/<%= subs[i].id; %>"><button class="btn btn-primary">Modify</button></a></td>
			            </tr>
		                <%
		            		}
		            		if(count==1)
		            		{
		            			%>
			                <tr>
				                <td>No Results Found</td>
				                <td></td>
				                <td></td>
				                <td></td>
				                <td></td>
				                <td></td>
				                <td></td>
				            </tr>
			                <%
		            		}
		                %>

			            
				    </table>
				 </div>
			</div>
		</div>
	</div>



	<script src="/js/script.js"></script>
</body>
</html>