				</div> <!-- /terms -->


				<div id="upload-steps" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding hidden">
					<div class="steps col-lg-12 no-padding">
						<h4 class="selected"><span>1</span> Basic Information</h4>
						<h4><span>2</span> Upload Files</h4>
					</div> <!-- /steps -->

					<form id="upload-form" class="basic-form col-lg-12" method="post" action="" enctype="multipart/form-data">
						<div class="basic-information">
							<div class="row form-full-row">
								<h3 class="label col-lg-12 no-padding">Name <span class="required">*</span></h3>
								<div class="clearfix"></div>
								<div class="form-field col-lg-6 col-md-6 col-sm-6 no-padding-left">
									<input type="text" name="f_name" placeholder="First Name" required>
								</div>

								<div class="form-field col-lg-6 col-md-6 col-sm-6">
									<input type="text" name="l_name" placeholder="Last Name" required>
								</div>
							</div> <!-- /row -->


							<div class="row form-full-row">
								<div class="form-field col-lg-6 col-md-6 col-sm-6 no-padding-left">
									<h3 class="label col-lg-12 no-padding">Email <span class="required">*</span></h3>
									<input type="email" name="email" placeholder="E-mail" required>
								</div>

								<div class="form-field col-lg-6 col-md-6 col-sm-6">
									<h3 class="label col-lg-12 no-padding">Institution Affiliation</h3>
									<input type="text" name="institution" placeholder="Institution Affiliation">
								</div>
							</div> <!-- /row -->


							<div class="row form-full-row">
								<div class="form-field col-lg-6 col-md-6 col-sm-6 no-padding-left">
									<h3 class="label col-lg-12 no-padding">Type of Data <span class="required">*</span></h3>
									<select name="data_type" required>
										<option value="">Choose from list</option>
										<option value="transmittance" disabled="disabled">Transmittance</option>
										<option value="reflectance">Reflectance</option>
										<option value="irradiance" disabled="disabled">Irradiance</option>
									</select>
									<span class="foot-note">Choose data type from the list - Transmittance, Reflectance, Irradiance</span>
								</div>

								<div class="form-field col-lg-6 col-md-6 col-sm-6">
									<h3 class="label col-lg-12 no-padding">Data From <span class="required">*</span></h3>
									<select name="data_from" required>
										<option value="">Choose from list</option>
										<option value="field">Field</option>
										<option value="museum">Museum</option>
									</select>
									<span class="foot-note">Data was collected from field or museum</span>
								</div>
							</div> <!-- /row -->


							<div class="row form-full-row">
								<div class="form-field col-lg-6 no-padding data-status">
									<h3 class="label col-lg-12 no-padding">Have data been published?</h3>
									<input id="got-published" type="radio" name="published" data-val="yes" value="yes"><label for="got-published">&nbsp; Yes</label>
									&nbsp;&nbsp;
									<input id="not-published" type="radio" name="published" data-val="no" value="no" checked><label for="not-published">&nbsp;No</label>
									<div class="sub-fields-container"></div>
								</div>

								<div class="form-field col-lg-6 embargo-status">
									<h3 class="label col-lg-12 no-padding">Embargo?</h3>
									<input type="radio" id="got-embargo" name="embargo" data-val="yes" value="yes"> <label for="got-embargo">&nbsp;Yes</label>
									&nbsp;&nbsp;
									<input type="radio" id="no-embargo" name="embargo" data-val="no" value="no" checked><label for="no-embargo">&nbsp;No</label>

									<div class="sub-fields-container"></div>
								</div>
							</div> <!-- /row -->
						</div> <!-- /basic-information -->




						<div class="upload-files no-padding hidden">
							<div class="form-field">
								<h3 class="label col-lg-12 no-padding">Metadata File <span class="required">*</span></h3>
								<button type="button" class="btn btn-primary trigger-input hidden">Upload</button>
								<input type="file" id="upload-metadata" name="metadata" class="metadata-input">
								<span class="upload-note"><em></em>Upload file that contains metadata for the raw files</span>
							</div>


							<div class="form-field">
								<h3 class="label col-lg-12 no-padding">Raw Files <span class="required">*</span></h3>
								<button type="button" class="btn btn-primary trigger-input hidden">Upload</button>
								<input type="file" id="upload-rawdata" name="rawdata" class="rawdata-input">
								<span class="upload-note"><em></em>Upload raw files into a zip format</span>
							</div>
						</div> <!-- /upload-files -->


						<div class="buttons-container">
							<button type="button" id="go-next" class="btn btn-primary go-next">Next</button>
							<button type="button" class="btn btn-primary go-back hidden">Back</button>
							<button type="submit" id="submit-form" name="submit" class="btn btn-primary submit hidden">Submit</button>
						</div>
